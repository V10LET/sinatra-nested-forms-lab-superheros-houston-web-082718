<h1>Create a Team and Heroes!</h1>
<form action="/teams" method="post">

  <!-- TEAM INFO -->
  <h2>TEAM INFO</h2>
  <p><label for="name">Team Name:</label>
  <input type="text" name="team[name]"></p>

  <p><label for="motto">Team Motto</label>
  <input type="text" name="team[motto]"></p>

  <!-- HERO 1 INFO -->
  <h2>HERO #1</h2>
  <p><label for="name">Hero Name:</label>
  <input type="text" id="member1_name" name="team[superheroes][][name]"></p>

  <p><label for="power">Hero Power:</label>
  <input type="text" id="member1_power" name="team[superheroes][][power]"></p>

  <p><label for="bio">Hero Bio:</label>
  <input type="text" id="member1_bio" name="team[superheroes][][bio]"></p>

  <!-- HERO 2 INFO -->
  <h2>HERO #2</h2>
  <input type="text" id="member2_name" name="team[superheroes][][name]"></p>

  <p><label for="power">Hero Power:</label>
  <input type="text" id="member2_power" name="team[superheroes][][power]"></p>

  <p><label for="bio">Hero Bio:</label>
  <input type="text" id="member2_bio" name="team[superheroes][][bio]"></p>

  <!-- HERO 3 INFO -->
  <h2>HERO #3</h2>
  <input type="text" id="member3_name" name="team[superheroes][][name]"></p>

  <p><label for="power">Hero Power:</label>
  <input type="text" id="member3_power" name="team[superheroes][][power]"></p>

  <p><label for="bio">Hero Bio:</label>
  <input type="text" id="member3_bio" name="team[superheroes][][bio]"></p>

  <!-- Submit button -->
  <input type="submit" name="submit" value="submit"/>

</form>
